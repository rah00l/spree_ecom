<%= hook :admin_user_group_edit_form_header do %>
  <%= render 'spree/shared/error_messages', :target => @user_group %>
  <h1><%= t("editing_user_group") %></h1>
<% end %>

<%= hook :admin_user_group_edit_form do %>
  <%= form_for(:user_group, :url => main_app.admin_user_group_path, :html => { :method => :put }) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>
    <%= hook :admin_user_group_edit_form_buttons do %>
      <p class="form-buttons" data-hook="buttons">
      <div class="mapp_users" ></div>
      <%= button t(:update) %>
      <%= t(:or) %> <%= link_to t(:cancel), main_app.admin_user_groups_path %>
      </p>
    <% end %>
  <% end %>
  <%= render :partial => "users", :locals => { :user_group => @user_group } %>
<% end %>